    <permission
        android:name="jp.kokarare1212.permission.DISABLE_KEYGUARD"
        android:description="@string/disable_keyguard"
        android:icon="@mipmap/device_owner"
        android:label="@string/disable_keyguard"
        android:permissionGroup="jp.kokarare1212.permission-group.KEYGUARD"
        android:protectionLevel="dangerous" />

    <permission-group
        android:name="jp.kokarare1212.permission-group.MANAGE_PACKAGES"
        android:description="@string/manage_package_description"
        android:icon="@mipmap/device_owner"
        android:label="@string/manage_package" />
    <permission-group
        android:name="jp.kokarare1212.permission-group.UNINSTALL_BLOCK"
        android:description="@string/change_uninstall_block_state"
        android:icon="@mipmap/device_owner"
        android:label="@string/change_uninstall_block_state" />
    <permission-group
        android:name="jp.kokarare1212.permission-group.PERMISSION_POLICY"
