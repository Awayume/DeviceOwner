        android:label="@string/disable_camera"
        android:permissionGroup="jp.kokarare1212.permission-group.CAMERA"
        android:protectionLevel="dangerous" />
    <permission
        android:name="jp.kokarare1212.permission.CLEAR_APPLICATION_DATA"
        android:description="@string/clear_application_data"
