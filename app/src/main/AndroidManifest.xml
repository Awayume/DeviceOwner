    <permission-group
        android:name="jp.kokarare1212.permission-group.MANAGE_APPLICATION"
        android:description="@string/password"
        android:icon="@mipmap/device_owner"
        android:label="@string/password" />
    <permission-group
        android:name="jp.kokarare1212.permission-group.MANAGE_BACKUP"
        android:description="@string/change_backup_state"
        android:icon="@mipmap/device_owner"
        android:label="@string/change_backup_state" />
    <permission-group
        android:name="jp.kokarare1212.permission-group.CAMERA"
        android:description="@string/disable_camera"
        android:icon="@mipmap/device_owner"
        android:label="@string/disable_camera" />
    <permission-group
        android:name="jp.kokarare1212.permission-group.APPLICATION_DATA"
        android:description="@string/clear_application_data"
        android:icon="@mipmap/device_owner"
        android:label="@string/clear_application_data" />
    <permission-group
        android:name="jp.kokarare1212.permission-group.STATUS_BAR"
        android:description="@string/disable_status_bar"
        android:icon="@mipmap/device_owner"
        android:label="@string/disable_status_bar" />
    <permission-group
        android:name="jp.kokarare1212.permission-group.KEYGUARD"
        android:description="@string/disable_keyguard"
        android:icon="@mipmap/device_owner"
        android:label="@string/disable_keyguard" />

    <uses-permission
        android:name="android.permission.DELETE_PACKAGES"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/device_owner"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/device_owner"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".PackageInstallService"
            android:permission="jp.kokarare1212.permission.INSTALL_PACKAGES" />
        <service
            android:name=".PackageUninstallService"
            android:permission="jp.kokarare1212.permission.DELETE_PACKAGES" />
        <service
            android:name=".PackageUninstallBlockService"
            android:permission="jp.kokarare1212.permission.CHANGE_UNINSTALL_BLOCK_STATE" />
        <service
            android:name=".PermissionPolicyChangeService"
            android:permission="jp.kokarare1212.permission.CHANGE_PERMISSION_POLICY" />
        <service
            android:name=".SecureSettingService"
            android:permission="jp.kokarare1212.permission.WRITE_SECURE_SETTINGS" />
        <service
            android:name=".SettingService"
            android:permission="jp.kokarare1212.permission.WRITE_SETTINGS" />
        <service
            android:name=".PreferredActivityService"
            android:permission="jp.kokarare1212.permission.SET_PREFERRED_ACTIVITY" />
        <service
            android:name=".SystemImageService"
            android:permission="jp.kokarare1212.permission.INSTALL_SYSTEM_UPDATE" />
        <service
            android:name=".RebootService"
            android:permission="jp.kokarare1212.permission.REBOOT" />
        <service
            android:name=".PasswordService"
            android:permission="jp.kokarare1212.permission.CHANGE_PASSWORD" />
        <service
            android:name=".ApplicationHiddenService"
            android:permission="jp.kokarare1212.permission.HIDDEN_APPLICATION" />
        <service
            android:name=".BackupService"
            android:permission="jp.kokarare1212.permission.CHANGE_BACKUP_STATE" />
        <service
            android:name=".CameraService"
            android:permission="jp.kokarare1212.permission.DISABLE_CAMERA" />
        <service
            android:name=".ApplicationDataService"
            android:permission="jp.kokarare1212.permission.CLEAR_APPLICATION_DATA" />
        <service
            android:name=".StatusBarService"
            android:permission="jp.kokarare1212.permission.DISABLE_STATUS_BAR" />
        <service
            android:name=".KeyGuardService"
            android:permission="jp.kokarare1212.permission.DISABLE_KEYGUARD" />

        <receiver
            android:name=".DeviceOwnerReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/admin" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>