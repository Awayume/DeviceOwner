        android:label="@string/set_preferred_activity" />
    <permission-group
        android:name="jp.kokarare1212.permission-group.SYSTEM_UPDATE"
        android:description="@string/install_system_update"
        android:icon="@mipmap/device_owner"
        android:label="@string/install_system_update" />
    <permission-group
